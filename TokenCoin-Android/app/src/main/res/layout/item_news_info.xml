<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimens_10"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20"
        android:paddingTop="@dimen/dimens_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_80"
            android:layout_toLeftOf="@+id/news_img">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/news_desc"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="@string/app_name"
                style="?attr/text_one_style"
                android:textSize="@dimen/dimens_16"/>

            <TextView
                android:id="@+id/news_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dimens_10"
                android:ellipsize="end"
                android:gravity="bottom"
                android:visibility="gone"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimens_14"/>
            <TextView
                android:id="@+id/news_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dimens_10"
                android:drawableLeft="@mipmap/news_time"
                android:drawablePadding="@dimen/dimens_10"
                android:gravity="bottom"
                android:text="@string/app_name"
                style="?attr/text_one_style"
                android:textSize="@dimen/dimens_13"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/news_img"
            android:layout_width="@dimen/dimens_80"
            android:layout_height="@dimen/dimens_80"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>


    </RelativeLayout>
</RelativeLayout>

