<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_confirm"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_25"
            android:text="@string/dialog_share_wallet_title"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_18"/>

        <ImageView
            android:id="@+id/wallet_code"
            android:layout_width="@dimen/dimens_160"
            android:layout_height="@dimen/dimens_160"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimens_30"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_margin="@dimen/dimens_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/go_weixin_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimens_10"
            android:drawableTop="@mipmap/share_weixin"
            android:gravity="center"
            android:text="@string/go_weixin_friend"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_12"/>

        <TextView
            android:id="@+id/go_weixin_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimens_10"
            android:drawableTop="@mipmap/share_weixin_circle"
            android:gravity="center"
            android:text="@string/go_weixin_circle"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_12"/>

        <TextView
            android:id="@+id/go_qq_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimens_10"
            android:drawableTop="@mipmap/share_qq_friend"
            android:gravity="center"
            android:text="@string/go_qq_friend"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_12"/>

        <TextView
            android:id="@+id/go_qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimens_10"
            android:drawableTop="@mipmap/share_qzone"
            android:gravity="center"
            android:text="@string/go_qzone"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/dimens_12"/>
    </LinearLayout>

</LinearLayout>



