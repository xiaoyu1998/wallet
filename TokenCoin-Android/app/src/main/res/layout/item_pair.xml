<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dimens_10"
        android:paddingTop="@dimen/dimens_10">

        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="@dimen/dimens_32"
            android:layout_height="@dimen/dimens_32"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/dimens_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/> 

        <TextView
            android:id="@+id/pair_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_5"
            android:layout_toLeftOf="@+id/coin_ups_and_downs"
            android:layout_toRightOf="@+id/coin_img"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_16"/>
        <TextView
            android:id="@+id/pair_token_price_cny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pair_name"
            android:layout_marginRight="@dimen/dimens_8"
            android:layout_toLeftOf="@+id/pair_token_price_f"
            android:layout_toRightOf="@+id/coin_img"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/pair_token_price_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens_8"
            android:layout_toLeftOf="@+id/box_token_ups_and_downs"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_16"/>

        <TextView
            android:id="@+id/pair_token_price_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pair_token_price_pair"
            android:layout_marginRight="@dimen/dimens_8"
            android:layout_toLeftOf="@+id/box_token_ups_and_downs"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_14"/>

        <RelativeLayout
            android:id="@+id/box_token_ups_and_downs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/pair_token_ups_and_downs"
                android:layout_width="@dimen/dimens_80"
                android:layout_height="@dimen/dimens_30"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_14"/>
        </RelativeLayout>

