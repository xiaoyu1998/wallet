<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_history_header_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimens_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimens_10">

            <TextView
                android:id="@+id/switch_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="全部账号"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimens_13"/>

            <ImageView
                android:id="@+id/look_number"
                android:layout_width="@dimen/dimens_20"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/drop_down"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimens_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/switch_property"
                android:layout_width="@dimen/dimens_70"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="全部资产"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimens_13"/>

            <ImageView
                android:id="@+id/look_property"
                android:layout_width="@dimen/dimens_20"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/drop_down"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_80"
        android:padding="@dimen/dimens_20"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_20"
            android:src="@mipmap/coin_user_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:text="@string/take_out"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/take_out_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img"
            android:text="@string/_2222cny"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_19"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:layout_centerInParent="true"
        android:background="@color/line"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_80"
        android:padding="@dimen/dimens_20"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_20"
            android:src="@mipmap/coin_user_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:text="@string/take_in"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/take_in_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/img1"
            android:text="@string/_2222cny"
            android:textColor="@color/title_color"
            android:textSize="@dimen/dimens_19"/>
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/line"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10"
        android:background="#FFF9F9F9"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_58"
        android:gravity="center_vertical"
        android:padding="@dimen/dimens_20"
        android:text="@string/transaction_history"
        android:textColor="@color/title_color"
        android:textSize="@dimen/dimens_15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/line"/>
</LinearLayout>
